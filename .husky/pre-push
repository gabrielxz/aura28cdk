#!/bin/bash

# Pre-push hook: Run comprehensive checks before pushing
echo "üöÄ Running pre-push validation..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Track if any check fails
FAILED=0

# 1. TypeScript type checking and build
echo -e "${BLUE}[CHECKING]${NC} TypeScript types and build..."
if npm run build 2>/dev/null; then
    echo -e "${GREEN}[‚úì]${NC} TypeScript checks and build passed"
    # Format any generated files from the build
    npm run format 2>/dev/null
else
    echo -e "${RED}[‚úó]${NC} TypeScript type errors or build errors found"
    FAILED=1
fi

# 2. Run tests
echo -e "${BLUE}[CHECKING]${NC} Running tests..."
if npm test -- --ci --coverage=false 2>/dev/null; then
    echo -e "${GREEN}[‚úì]${NC} All tests passed"
else
    echo -e "${RED}[‚úó]${NC} Tests failed"
    FAILED=1
fi

# 3. Format check (should already be done by pre-commit, but verify)
echo -e "${BLUE}[CHECKING]${NC} Code formatting..."
if npm run format:check 2>/dev/null; then
    echo -e "${GREEN}[‚úì]${NC} Code formatting is correct"
else
    echo -e "${RED}[‚úó]${NC} Code formatting issues found"
    echo -e "${YELLOW}[!]${NC} Run 'npm run format' to fix"
    FAILED=1
fi

if [ $FAILED -eq 0 ]; then
    echo -e "${GREEN}‚úÖ All pre-push checks passed!${NC}"
    exit 0
else
    echo -e "${RED}‚ùå Pre-push validation failed!${NC}"
    echo "Please fix the issues above before pushing."
    exit 1
fi